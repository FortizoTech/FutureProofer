{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["ES2022", "DOM"],
      "jsx": "react-jsx",
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "rootDir": ".",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["client/src/*"],
        "@shared/*": ["shared/*"],
        "@assets/*": ["attached_assets/*"]
      },
      "types": ["node"],
      "noEmitOnError": true,
      "sourceMap": true
    },
    "include": [
      "server/**/*.ts",
      "client/src/**/*.ts",
      "client/src/**/*.tsx",
      "shared/**/*.ts",
      "vite.config.ts"
    ],
    "exclude": [
      "node_modules",
      "client/dist",
      "dist"
    ]
  }  